%footer.footer{:role => "contentinfo"}
  -#.footer-logo
    = image_tag('logo_full.png', alt: 'Audilis')
  .footer-links
    %ul
      %li
        %h3 Content
      %li
        = link_to 'Games', Game.first
      %li
        = link_to 'Team', team_path
      %li
        = link_to 'Contact', new_contact_path
      %li
        = link_to 'About Us', about_path
    %ul
      %li
        %h3 Follow Us
      %li
        %a{:href => "javascript:void(0)"}
          = icon('tumblr fa-fw')
          Tumblr
      %li
        %a{:href => "javascript:void(0)"}
          = icon('facebook fa-fw')
          Facebook
      %li
        %a{:href => "javascript:void(0)"}
          = icon('twitter fa-fw')
          Twitter
      %li
        %a{:href => "javascript:void(0)"}
          = icon('youtube fa-fw')
          YouTube
    %ul
      %li
        %h3 Legal
      %li
        = link_to 'Terms and Conditions', terms_legal_path
      %li
        = link_to 'Privacy Policy', privacy_legal_path
  %hr
  %p
    &copy;
    = Time.now.year
    Audilis
