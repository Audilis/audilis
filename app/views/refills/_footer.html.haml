    = image_tag('logo_full.png', alt: 'Audilis')
  .footer-links
    %ul
      %li
        %h3 Love is a Game
      %li
        = link_to 'Overview', liag_path
      %li
        = link_to 'Characters', characters_liag_path
      %li
        = link_to 'Features', features_liag_path
      %li
        = link_to 'FAQ', faq_liag_path
    %ul
      %li
        %h3 Follow Us
      %li
        = link_to 'http://audilisofficial.tumblr.com', target: '_blank' do
          = icon('tumblr fa-fw')
          Tumblr
      %li
        = link_to 'https://www.facebook.com/AudilisGames', target: '_blank' do
          = icon('facebook fa-fw')
          Facebook
      %li
        = link_to 'https://twitter.com/audilisofficial', target: '_blank' do
          = icon('twitter fa-fw')
          Twitter
      %li
        = link_to 'https://www.instagram.com/audilisofficial', target: '_blank' do
          = icon('instagram fa-fw')
          Instagram
      %li
        = link_to 'https://plus.google.com/b/104673219274360857218/+Audilis', target: '_blank' do
          = icon('google-plus fa-fw')
          Google+
      %li
        = link_to 'https://www.youtube.com/c/Audilis', target: '_blank' do
          = icon('youtube fa-fw')
          YouTube
    %ul
      %li
        %h3 Audilis
      %li
        = link_to 'About Us', root_path
      %li
        = link_to 'Our Team', team_path
      %li
        = link_to 'Contact Us', new_contact_path
      -#%li
        = link_to 'Terms and Conditions', terms_legal_path
      -#%li
        = link_to 'Privacy Policy', privacy_legal_path
