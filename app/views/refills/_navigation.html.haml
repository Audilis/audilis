%body
  %header.navigation{:role => "banner"}
    .navigation-wrapper
      = link_to root_path, class: 'logo' do
        = image_tag('logos/full/audilis.png', alt: 'Audilis')
      %a#js-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"} MENU
      %nav{:role => "navigation"}
        %ul#js-navigation-menu.navigation-menu.show
          - if Game.any?
            %li.nav-link.more
              = link_to 'Games', Game.first
              %ul.submenu
                - Game.all.each do |game|
                  %li
                    = link_to game.title, game, alt: game.tagline
          %li.nav-link
            = link_to 'Team', team_path
          %li.nav-link
            = link_to 'Contact', new_contact_path
          %li.nav-link
            = link_to 'About Us', about_path
      .navigation-tools
        .email-bar
          %form{:role => "form"}
            %input{:placeholder => "Subscribe", :type => "email"}/
            %button{:type => "submit"}
              = icon('envelope fa-fw')
        %a.button.sign-in{:href => "javascript:void(0)" } Sign In
